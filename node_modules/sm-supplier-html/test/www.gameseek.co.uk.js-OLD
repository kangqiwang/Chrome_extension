        describe('Search Page', function() {

        var payload = {
            "pageType" : "search",
            "url" : "https://live.gameseek.co.uk/directory/video-games/ps4/games"
        }

        // Change to be the number of products on the page
        var x = 10;
        it('should return ' + x + ' numer of products', function (done) {
            Structure(payload, function(result) {
                result.length.should.equal(x);
                done()
            })
        });

        var firstProductName = '11cm Spongebob Stretch Figures (Assorted)';
        it('first product should be ' + firstProductName, function(done) {
            Structure(payload, function(result) {
                var first = result.shift()
                var expected = JSON.stringify({
                    barcode: null,
                    name: firstProductName,
                    price: '4.99',
                    url: 'http://www.gameseek.co.uk/pd/DVD68g07cu3mxh/11cm-Spongebob-Stretch-Figures-Assorted-',
                    image: 'http://www.gameseek.co.uk/images/tn/12011cm_spongebob_stretch_figures_assorted_10_DVD68g07cu3mxh_a.jpg',
                    country: 'uk'
                })
                JSON.stringify(first).should.equal(expected)
                done()
            })

        })

        var lastProductName = 'Baby Annabell Comfort Seat';
        it('last product should be ' + lastProductName, function (done) {
            Structure(payload, function(result) {
                var last = result.pop()
                var expected = JSON.stringify({
                    barcode: null,
                    name: lastProductName,
                    price: '22.73',
                    url: 'http://www.gameseek.co.uk/pd/Toy1hhns2wjvjf/Baby-Annabell-Comfort-Seat',
                    image: 'http://www.gameseek.co.uk/images/tn/120_21_Toy1hhns2wjvjf_a.jpg',
                    country: 'uk'
                })

                JSON.stringify(last).should.equal(expected)
                done()
            });
        })

    });

